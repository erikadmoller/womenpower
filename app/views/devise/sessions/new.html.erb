<div class="wrapper center">
<h2 class="btn">Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="forms">
  <div class="form-inputs">
    <p><%= f.input :email, required: false, autofocus: true %></p>
    <p><%= f.input :password, required: false %></p>
    <p><%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %></p>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: 'btn'%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>