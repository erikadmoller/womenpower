<div class="wrapper sessions center">
<div class="col6 logo center"><h1>I NEED A SHERO</h1></div>
	<div class="header_line"></div>
<h1 class="form_headers">Log in</h1>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="forms_wrap">
  <div class="form-inputs">
    <p><%= f.input :email, required: false, autofocus: true %></p>
    <p><%= f.input :password, required: false %></p>
    <p><%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %></p>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: 'btn'%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>